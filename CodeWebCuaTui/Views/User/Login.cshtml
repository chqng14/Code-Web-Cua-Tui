@model CodeWebCuaTui.Models.User;
@{
}
   <!--article  -->
    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-white text-dark" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">

                            <div class="mb-md-5 mt-md-4 pb-5">

                                <h2 class="fw-bold mb-2 text-uppercase" style="font-size: 50px;">Đăng nhập</h2>
                                @using (Html.BeginForm("Login", "User", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                @Html.LabelFor(m => m)
                                @Html.TextBoxFor(m => m.UserName, "", new { @class = "form-control", @placeholder = "Account" })

                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password)
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                            </div>
                            <div class="form-group">
                                <input type="submit" name="submit" class="btn btn-primary" asp-controller="User" asp-action="Login" value="Login" />
                            </div>
                        }
                        <div>
                            <p class="mb-0" style="font-size: 20px;">
                                Chưa có tài khoản? <a href="#signup" class="text-dark-50 fw-bold">Sign Up</a>
                            </p>
                        </div>

                                <p class="small mb-5 pb-lg-2"><a class="text-dark-50"  data-mdb-toggle="modal"
                                        data-mdb-target="#exampleModal" style="font-size: 20px;" asp-area="" asp-controller="Home" asp-action="ForgotPass" >Quên mật khẩu?</a></p>

                                <button class="btn btn-outline-danger btn-lg px-5" type="submit">Đăng nhập</button>
                                <div class="d-flex justify-content-center text-center mt-4 pt-1">
                                    <a href="#!" class="text-dark"><i class="fab fa-facebook-f fa-lg"></i></a>
                                    <a href="#!" class="text-dark"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                                    <a href="#!" class="text-dark"><i class="fab fa-google fa-lg"></i></a>
                                </div>

                            </div>

                            <div>
                                <p class="mb-0" style="font-size: 20px;">Không có tài khoản? <a asp-area="" asp-controller="User" asp-action="Create"
                                        class="text-dark-50 fw-bold">Đăng ký</a>
                                </p>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
