@model IEnumerable<CodeWebCuaTui.Models.Product>

@{
    ViewData["Title"] = "ShowAll";
}

<h1>ShowAll</h1>

     @if(TempData["MessageForCreate"]!=null)
        {
          <script>
              Swal.fire('@TempData["MessageForCreate"]')
          </script>
        }
        
     @if(TempData["AlertMessage"]!=null)
        {
          <script>
              Swal.fire('@TempData["AlertMessage"]')
          </script>
        }
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
 @*           <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>*@

             <th>
                @Html.DisplayNameFor(model => model.ProductCode)
            </th>
              <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.ColorID)*@
                Color
            </th>
            <th>
              @*  @Html.DisplayNameFor(model => model.SizeID)*@
              Size
            </th>
            <th>
               @* @Html.DisplayNameFor(model => model.SupplierID)*@
               Supplier
            </th>
            <th>
             @*   @Html.DisplayNameFor(model => model.CategoryID)*@
             Category
            </th>
            <th>
               @* @Html.DisplayNameFor(model => model.ImageID)*@
               Image
            </th>
           
          
            <th>
                @Html.DisplayNameFor(model => model.Describe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
                            
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
         @*   <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>*@ <td>
                @Html.DisplayFor(modelItem => item.ProductCode)
            </td>
               <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sizes.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Suppliers.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
             @*   @Html.DisplayFor(modelItem => item.Images.Path1)*@
                <img src="@Url.Content(item.Images.Path1)" alt="Hình ảnh" style="width:50px">
            </td>
           
         
            <td>
                @Html.DisplayFor(modelItem => item.Describe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
            @string.Format("{0:N0}đ", item.Price)
            </td>
            <td>
          @(item.Status == 0 ? "Hoạt động" : "Không hoạt động")
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
                @Html.ActionLink("Details", "Details", new { id=item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.ID })
            </td>
        </tr>
}
    </tbody>
</table>
