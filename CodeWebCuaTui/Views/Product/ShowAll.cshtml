@model IEnumerable<CodeWebCuaTui.Models.Product>


    <div class="app">
        <div class="layout">
            <!-- Header START -->

            <!-- Header END -->

            <!-- Side Nav START -->

            <!-- Side Nav END -->

            <!-- Page Container START -->
            <div class="container">

                <!-- Content Wrapper START -->
                <div class="main-content">
                    <div class="page-header">
                        <h2 class="header-title">Orders List</h2>
                        <div class="header-sub-title">
                            <nav class="breadcrumb breadcrumb-dash">
                                <a asp-action="Index" asp-controller="Home" class="breadcrumb-item"><i
                                        class="anticon anticon-home m-r-5"></i>Home</a>

                                <span class="breadcrumb-item active">Bill List</span>
                            </nav>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <div class="row m-b-30">
                                <div class="col-lg-8">
                                    <div class="d-md-flex">
                                        <div class="m-b-10 m-r-15">

                                            <select class="custom-select" style="min-width: 180px;">
                                                <option selected>Status</option>
                                                <option value="all">Hoàn thành</option>
                                                <option value="homeDeco">Chưa hoàn thành</option>

                                            </select>
                                          
                                        </div>
                                          <form asp-controller="Home" asp-action="Index">
                                                <div class="input-group" style="width:200px">
                                                    <input type="text" class="form-control" name="searchString"
                                                        placeholder="Tìm kiếm...">

                                                    <div class="input-group-append">
                                                        <button class="btn btn-outline-secondary" type="submit" hidden>
                                                            <i class="fa fa-search"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                            </form>

                                    </div>
                                </div>
                                <div class="col-lg-4 text-right">
                                <a asp-action="Create" asp-controller="Product" style="background-color:black;color:white;border:none"  class="btn btn-primary">
                                    <i class="anticon anticon-plus-circle m-r-5"></i>
                                    <span>Add Product</span>
                                </a>

                                </div>
                            </div>
                            <div class="table-responsive">
                                <table class="table table-hover e-commerce-table">
                                    <table class="table">
    <thead>
        <tr>
 @*           <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>*@

             <th>
                @Html.DisplayNameFor(model => model.ProductCode)
            </th>
              <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.ColorID)*@
                Color
            </th>
            <th>
              @*  @Html.DisplayNameFor(model => model.SizeID)*@
              Size
            </th>
            <th>
               @* @Html.DisplayNameFor(model => model.SupplierID)*@
               Supplier
            </th>
            <th>
             @*   @Html.DisplayNameFor(model => model.CategoryID)*@
             Category
            </th>
            <th>
               @* @Html.DisplayNameFor(model => model.ImageID)*@
               Image
            </th>
           
          
            <th>
                @Html.DisplayNameFor(model => model.Describe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
                            
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
         @*   <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>*@ <td>
                @Html.DisplayFor(modelItem => item.ProductCode)
            </td>
               <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sizes.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Suppliers.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
             @*   @Html.DisplayFor(modelItem => item.Images.Path1)*@
                <img src="@Url.Content(item.Images.Path1)" alt="Hình ảnh" style="width:50px">
            </td>
           
         
            <td>
                @Html.DisplayFor(modelItem => item.Describe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
            @string.Format("{0:N0}đ", item.Price)
            </td>
            <td>
          @(item.Status == 0 ? "Hoạt động" : "Không hoạt động")
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
                @Html.ActionLink("Details", "Details","Home", new { id=item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.ID })
            </td>
        </tr>
}
    </tbody>
</table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Content Wrapper END -->

                <!-- Footer START -->
                =
                <!-- Footer END -->

            </div>
            <!-- Page Container END -->

            <!-- Quick View END -->
        </div>
    </div>


